<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="section">
        <div id="map">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <div class="divider"></div>
      <div class="section center-align">
        <h4>The crime scenes</h4>
        <h5>Our most boiling skate spots</h5>
      </div>
      <div class="section">
        <% @most_active_spots.each do |spot|%>
          <% if current_user %>
            <div class="col l4 m12 s12">
              <%= render partial: "spot_media_current_user", locals: {:spot => spot} %>
            </div>
          <% else %>
            <div class="col l4 m12 s12">
              <%= render partial: "spot_media_visitor", locals: {spot: spot} %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <% if current_user %>
      <div class="col s12">
        <div class="divider"></div>
        <div class="section center-align">
          <h5>Check the latest clip!<h5/>
        </div>
        <div class="section">
          <%= render partial: "videos/video_media", locals: {video: @last_video_updated} %>
          <%= render partial: "helpers/buttons_form", locals: {video: @last_video_updated} %>
        </div>
      </div>
    <% elsif current_user.nil? %>
      <div class="col s12">
        <div class="divider"></div>
        <div class="section center-align">
          <h4>Check the latest clip!</h4>
          <%= render partial: "videos/video_media", locals: {video: @last_video_updated} %>
        </div>
        <div class="divider"></div>
          <div class="section">
            <%= render 'helpers/suscribe_buttons' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
