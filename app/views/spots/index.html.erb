<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>The crime scenes</h3>
      <% @spots.each do |spot|%>
        <ul>
          <li>
            <div class="media">
              <div class="media-left">
                <a href="<%= spot_path(spot.id) %>">
                  <img class="media-object" src="<%= spot.logo.url(:thumb)%>" alt="Spot's avatar">
                </a>
              </div>
              <div class="media-body">
                  <a href="<%= spot_path(spot.id) %>">
                    <h4 class="media-heading"><%= spot.name %>
                    </h4>
                  </a>
                 <%= spot.description %>
                  <p>balbalab</p>
              </div>
            </div>
          </li>
        </ul>
        <% end %>
    </div>
  </div>
</div>
