<%= form_for @spot, :html => {:multipart => true }  do |f| %>
  <form>
    <div class="form-group">
      <div class="modify--userlogo">
        <%= f.label :logo %>
        <%= f.file_field :logo %>
      </div>
    </div>
    <div class="form-group">
      <label for="name">Name of the spot</label>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <div class="form-group">
      <label for="email">Type a description</label>
      <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
    </div>
    <div class="form-group">
      <label for="district">Enter the district the spot is located</label>
      <%= f.text_field :district, class: "form-control", placeholder: "District" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class:"btn btn-primary" %>
    </div>
  </form>
<% end %>
