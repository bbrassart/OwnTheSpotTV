<div class="container">
  <div class="row">
    <% if current_user.present? %>
      <div class="col l4 s12">
        <%= render partial: "skaters/overall_best_current_user", locals: {skaters: @skaters} %>
      </div>
      <div class="col l8 s12">
        <div class="section">
          <img src="http://i.imgur.com/38CPPcu.jpg" width="525px"alt="Number one" class="center-align">
        </div>
      </div>
    <% else %>
      <div class="col l4 s12">
        <%= render partial: "skaters/overall_best_visitor", locals: {skaters: @skaters} %>
      </div>
      <div class="col l8 s12">
        <div class="section">
          <img src="http://i.imgur.com/38CPPcu.jpg" width="525px"alt="Number one" class="center-align">
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="section">
      <div class="divider"></div>
      <h5 class="center-align">Highest rated videos</h5>
    </div>
    <div class="section">
      <% @highest_rated_videos.each do |video| %>
        <div class="col l4 m6 s12">
          <div class="section">
            <%= render partial: "videos/video_media", locals: {video: video} %>
            <% if video.score == 1 %>
              <h5 class="center-align"><%= video.score %> like !</h5>
            <% else %>
              <h5 class="center-align"><%= video.score %> likes !</h5>
            <%end %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
  <%unless current_user %>
    <div class="row">
      <div class="col s12">
        <div class="divider"></div>
        <div class="section">
          <%= render 'helpers/suscribe_buttons' %>
        </div>
      </div>
    </div>
  <%end%>
  <div class="section">
  </div>
</div>
