<div class="container">
  <div class="row">
    <% if current_user.present? %>
      <%= render partial: "skaters/overall_best_current_user", locals: {skaters: @skaters} %>
    <% else %>
      <%= render partial: "skaters/overall_best_visitor", locals: {skaters: @skaters} %>
    <% end %>
  </div>
  <div class="row">
    <div class="section">
      <div class="divider"></div>
      <h5 class="center-align">Highest rated videos</h5>
    </div>
    <div class="section">
      <% @highest_rated_videos.each do |video| %>
        <div class="col l4 m6 s12">
          <%= render partial: "videos/video_media", locals: {video: video} %>
          <div class="vote__buttons">
            <b>Overall Score</b> <%= video.score %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%unless current_user %>
    <div class="row">
      <div class="col s12">
        <div class="divider"></div>
        <div class="section">
          <%= render 'helpers/suscribe_buttons' %>
        </div>
      </div>
    </div>
  <%end%>
</div>
