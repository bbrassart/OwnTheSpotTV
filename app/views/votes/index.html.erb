<div class="main__background custom__background-<%=@bg_id%>">
  <div class="container">
    <div class="row">
      <% if current_user.present? %>
        <div class="col m6 offset-m3 s12">
          <div class="section">
            <%= render partial: "helpers/overall_best_current_user", locals: {skaters: @skaters} %>
          </div>
        </div>

      <% else %>
        <div class="col m6 offset-m3 s12">
          <div class="section">
            <%= render partial: "helpers/overall_best_visitor", locals: {skaters: @skaters} %>
          </div>
        </div>
      <% end %>
      <div class="col s12">
        <div class="divider"></div>
      </div>

      <div class="col m6 offset-m3 s12">
        <div class="section">
          <div class="card-panel jumbotron center-align">
            <span class="black-text">
              <h5 class="center-align">Highest rated videos</h5>
            </span>
          </div>
        </div>
      </div>

      <% @highest_rated_videos.each do |pair|
        skater = pair[0]
        video = pair[1] %>
        <div class="col m6 s12">
          <%= render partial: "helpers/video_media", locals: {video: video} %>
          <% if current_user %>
            <a class="hoverable" href="<%=skater_path(video.skater.id)%>">
          <%end%>
          <div class="chip chip__highest--rated">
            <img  src="<%= skater.logo.url(:thumb)%>" alt="Skater's avatar">
            <%= skater.username %>
          </div>
          <% if current_user %>
            </a>
          <%end%>
          <div class="chip chip__highest--rated">
            <% if video.score == 1 %>
              <%= video.score %> like!
            <% else %>
              <%= video.score %> likes!
            <%end %>
            <i class="small material-icons">insert_chart</i>
          </div>
        </div>
      <% end %>
    </div>

    <%unless current_user %>
      <div class="row">
        <div class="col s12">
          <div class="divider"></div>
          <div class="section">
            <%= render 'helpers/suscribe_buttons' %>
          </div>
        </div>
      </div>
    <%end%>
    <div class="section"></div>
  </div>
</div>
