<div class="main__background custom__background-<%=@bg_id%>">
  <div class="container">
    <div class="row">
      <% if current_user %>
        <div class="col s12">
      <%else %>
        <div class="col m6 s12">
      <%end%>
      <div class="section">
        <div class="card-panel jumbotron center-align">
          <span class="black-text">
            <h4>About us</h4>
            <p>OwnTheSpot.TV is a website created by skateboarders for skateboarders.</p>
            <p>Registered users can submit their Instagram clips and then vote for the best videos.</p>
            <p>20 skate spots in Barcelona. Become the boss of the spot</p>
          </span>
        </div>
      </div>
    </div>
    <% if current_user.nil? %>
      <div class="section">
        <div class="col m6 s12 center-align">
          <%= render 'helpers/suscribe_buttons' %>
        </div>
      </div>
      <% end %>
    <div class="section">
    </div>
  </div>
</div>
