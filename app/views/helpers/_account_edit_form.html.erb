<% button = current_user ? "Edit your profile" : "Create your profile" %>

<%= form_for @skater, :html => {:multipart => true }  do |f| %>
  <form>
    <div class="form-group">
      <div class="modify--userlogo">
        <%= f.label :logo %>
        <%= f.file_field :logo %>
      </div>
    </div>
    <% if current_user.nil? %>
      <div class="form-group">
        <label for="username">Enter your username</label>
        <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
      </div>
      <div class="form-group">
        <label for="email">Enter a valid email</label>
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.radio_button(:stance, "regular", class:"with-gap") %>
      <label for="skater_stance_regular">Regular</label>

      <%= f.radio_button( :stance, 'goofy' , class:"with-gap" )%>
      <label for="skater_stance_goofy">Goofy</label>
    </div>
    <% if current_user %>
      <div class="form-group">
        <label for="password">Type a new password</label>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="form-group">
        <label for="password_confirmation">Confirm your new password</label>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"  %>
      </div>
    <% else %>
      <div class="form-group">
        <label for="password">Enter your password</label>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="form-group">
        <label for="password_confirmation">Confirm your password</label>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"   %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.submit button, class:"btn btn-primary" %>
    </div>
  </form>
<% end %>
