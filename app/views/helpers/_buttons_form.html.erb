<%if !current_user %>
  <div class="center-align">
    <button class="btn hoverable waves-effect signup__vote__button waves-light" type="submit" name="action"><a class="white-text" href=<%=new_skater_path%>>Sign up to vote
      <i class="material-icons right">send</i></a>
    </button>
  </div>
<%else%>
  <div class="votebuttons__wrapper">
    <h5 class="text__votebuttons right-align"><b>Overall Score:</b> <%= video.score %></h5>
    <div class="vote__buttons">
      <button type="button" class="navbar--title btn poser__button"><%= link_to ("POSER"), skaters_path%></button></a>
    </div>

    <div class="vote__buttons">
      <%= form_tag('/votes/dislike') do %>
        <%= hidden_field_tag :video_id, video.id %>
        <button type="submit" class="btn red vote--buttons">
          <i class="material-icons">thumb_down</i>
        </button>
      <%end%>
    </div>
    <div class="vote__buttons">
      <%= form_tag('/votes/like') do %>
        <%= hidden_field_tag :video_id, video.id %>
        <button type="submit" class="btn vote--buttons">
          <i class="material-icons">thumb_up</i>
        </button>
      <% end %>
    </div>
  </div>
<%end%>
