<%if !current_user %>
  <div class="center-align">
    <a class="white-text" href=<%=new_skater_path%>>
      <button class="btn hoverable waves-effect signup__vote__button waves-light" type="submit" name="action">Sign up to vote
      <i class="material-icons right">send</i>
    </button>
  </a>
  </div>
<%else%>
<% skater = Skater.find(video.skater.id) %>
  <div class="votebuttons__wrapper">
    
    <div class="chip">
      <img src="<%=skater.id%>" alt="Skater's avatar">
      <%= skater.username %>
    </div>
    <div class="chip">
      <i class="material_icons">insert_chart</i>
      <%= video.score%> likes
    </div>



    <div class="vote__buttons">
      <%= form_tag('/votes/dislike') do %>
        <%= hidden_field_tag :video_id, video.id %>
        <button type="submit" class="btn red vote--buttons">
          <i class="material-icons">thumb_down</i>
        </button>
      <%end%>
    </div>
    <div class="vote__buttons">
      <%= form_tag('/votes/like') do %>
        <%= hidden_field_tag :video_id, video.id %>
        <button type="submit" class="btn vote--buttons">
          <i class="material-icons">thumb_up</i>
        </button>
      <% end %>
    </div>
  </div>
<%end%>
