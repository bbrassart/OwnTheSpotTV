<!-- Dropdown menus of the navbar -->
<ul id="dropdown1" class="dropdown-content">
  <li><%= link_to "What is OwnTheSpot.TV", about_us_path, class: "hoverable"%></li>
  <li><%= link_to "8 rules to rule them all", rules_path, class: "hoverable" %></li>
  <li><%= link_to 'Our partners in skate crime', skaters_path, class: "hoverable" %></li>
  <li class="divider"></li>
  <li><%= link_to "Contact us", "/contacts", class: "hoverable"%></li>
</ul>

<% if current_user %>
  <ul id="dropdown2" class="dropdown-content">
    <li><%= link_to "Submit your clip", new_video_path, class: "hoverable" %></li>
    <li><%= link_to "View your profile", skater_path(current_user), class: "hoverable" %></li>
    <li><%= link_to "Edit your profile", edit_skater_path(current_user), class: "hoverable" %></li>
    <li><%= link_to "Log out", logout_path, method:"delete", class: "hoverable" %></li>
  </ul>
<% end %>

<!-- Navbar -->

<nav>
  <div class="nav-wrapper grey darken-4 z-depth-1">
    <div class="navbar__ul--left">
      <a class="hoverable brand-logo" href="/">

